# Example .env file for Anowar Portfolio Backend

# Database
pass=your_db_password_here
NODE_ENV="development"
PORT="5000"

# Connect to Supabase via connection pooling
DATABASE_URL="postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=30&pool_timeout=30"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=30"

# ADMIN CREDENTIALS
SUPER_ADMIN_EMAIL="admin@example.com"
SUPER_ADMIN_PASSWORD="your_admin_password"
BCRYPT_SALT_ROUNDS="10"

# JWT
JWT_ACCESS_SECRET="your_jwt_access_secret"
JWT_ACCESS_EXPIRES="7d"
JWT_REFRESH_SECRET="your_jwt_refresh_secret"
JWT_REFRESH_EXPIRES="30d"

# Cloudinary
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Client URL
CLIENT_URL="https://your-frontend-url.com"
